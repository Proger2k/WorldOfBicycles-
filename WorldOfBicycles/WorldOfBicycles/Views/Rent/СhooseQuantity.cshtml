@model WorldOfBicycles.ViewModels.PaymentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавить в корзину";
}

<main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">
        <div class="row WOW rotateInUpLeft">
            <div class="col-md-6 mb-4">
                <img src="@Model.Rent.Product.Img" alt="@Model.Rent.Product.Name" class="img-fluid">

            </div>
            <div class="col-md-6 mb-4">
                <div class="p-4">
                    <div class="mb-3">
                        <h3>@Model.Rent.Product.Name</h3>
                        <a href="">
                            <span class="badge purple mr-1">@Model.Rent.Product.CategoryId</span>
                        </a>
                        <a href="">
                            <span class="badge blue mr-1">New</span>
                        </a>
                        <a href="">
                            <span class="badge red mr-1">Bestseller</span>
                        </a>
                    </div>
                    <p class="lead">
                        <span class="mr-1">
                            @Model.Rent.Product.Price$
                        </span>
                    </p>
                    <p>
                        Хороший выбор для езды по городу
                    </p>
                    <form action="" class="needs-validation" method="post">

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Количество: </label>
                                <input type="number" value="1" arial-label="Search" style="width: 100px;" class="form-control" asp-for="@Model.Rent.ProductCount">
                            </div>
                        </div>

                        <div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="@Model.Rent.Date">Дата аренды: </label>
                                    <input type="text" class="form-control" required asp-for="@Model.Rent.Date" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="@Model.Rent.Duration">Продолжительность в часах</label>
                                <input type="text" class="form-control" required asp-for="@Model.Rent.Duration" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <button type="submit" class="btn btn-primary btn-md my-0 p" asp-controller="Rent" asp-action="Payment" asp-route-id="@Model.Rent.Product.Id">
                                    Перейти к оплате <i class="fa fa-shopping-cart ml-1"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
        </div>
    </div>
</main>
<div style="width: 100%">
    <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0"
            marginwidth="0"
            src="https://maps.google.com/maps?width=100%25&amp;height=400&amp;hl=en&amp;q=Nauky%20Ave,%2014,%20Kharkiv,%20Kharkiv%20Oblast,%2061000+(%D0%92%D0%B5%D0%BB%D0%BE%D0%BF%D1%80%D0%BE%D0%BA%D0%B0%D1%82)&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
</div>