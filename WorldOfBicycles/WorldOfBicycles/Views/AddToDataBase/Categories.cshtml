@model WorldOfBicycles.ViewModels.AddToDataBaseViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавление товара в базу данных";
}

<h3>Добавить товар</h3>
<div class="row p-5">
    <form asp-action="Categories" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Category.Name"></label>
            <div class="col-12">
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Добавить Товар" />
    </form>
</div>
