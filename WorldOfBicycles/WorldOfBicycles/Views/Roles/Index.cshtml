@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}


    <div class="p-5">
        <div class="pt-5">
            <h2>Список ролей</h2>
            <table class="table">
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
            <a class="btn btn-sm btn-primary" asp-action="Create">Добавить роль</a>
            <a class="btn btn-sm btn-primary" asp-action="UserList">Список пользователей</a>
        </div>
    </div>