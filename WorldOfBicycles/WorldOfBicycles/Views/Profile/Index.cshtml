@model WorldOfBicycles.ViewModels.ProfileViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Аренда велосипедов";
}


<div class="container" style="margin-top: 100px;">
    <h1>
        <b>
            Ваши арендованные велосипеды
        </b>
    </h1><br />
    @foreach (var item in Model.rents)
    {
        <div class="alert alert-warning mt-3">
            <b>Название велосипеда:</b> @item.Product.Name<br />
            <b>Категория велосипеда:</b> @item.Product.Category.Name<br />
            <b>Количество велосипедов:</b> @item.ProductCount<br />
            <b>Дата аренды:</b> @item.Date<br />
            <b>Длительность аренды в часах:</b> @item.Duration<br />
            <b>Стоимость:</b> @item.Sum грн.<br />
        </div>
        <button class="btn btn-primary" id="btn_rent" type="submit" style="margin-bottom:100px">
            Просмотреть код
        </button><br />
        <script>
            let btn = document.getElementById("btn_rent");
            btn.onclick = function(){
                alert("Никому не показывайте этот код: @item.Code");
            }
        </script>
    }
    <h3><b>Адрес:</b></h3>
    <div style="width: 100%">
        <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0"
                marginwidth="0"
                src="https://maps.google.com/maps?width=100%25&amp;height=400&amp;hl=en&amp;q=Nauky%20Ave,%2014,%20Kharkiv,%20Kharkiv%20Oblast,%2061000+(%D0%92%D0%B5%D0%BB%D0%BE%D0%BF%D1%80%D0%BE%D0%BA%D0%B0%D1%82)&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe>
    </div>
</div>

