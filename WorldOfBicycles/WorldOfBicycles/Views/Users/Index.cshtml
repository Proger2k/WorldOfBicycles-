@model IEnumerable<WorldOfBicycles.Data.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

    <div class="pt-5">
        <div class="p-lg-5">
            <a asp-action="Create" class="navbar-brand waves-effect">
                <strong class="blue-text">Добавить пользователя</strong>
            </a>
            <table class="table">
                <tr><th>Email</th><th>Год</th><th></th></tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Year</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
